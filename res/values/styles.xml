<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    
    <style name="appWindowTitleBackground">
        <item name="android:background">@color/appBGColor</item>
    </style>
    
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
       
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowTitleSize">26dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/appWindowTitleBackground</item>
    </style>
    
    <style name="appLayoutTheme" parent="android:Theme">
        <item name="android:background">@color/appBGColor</item>
        <item name="android:textColor">@color/appFontColor</item>
    </style>
    
    <style name="banner">
	    <item name="android:textColor">@color/appFontColor</item>
	    <item name="android:background">@color/darkGreen1</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:paddingTop">2dp</item>
	    <item name="android:paddingBottom">2dp</item>
	    <item name="android:gravity">center</item>
	</style>
</resources>
