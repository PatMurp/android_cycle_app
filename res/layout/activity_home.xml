<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/appLayoutTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

	    <Button
	        android:id="@+id/addARouteBtn"
	        style="@android:style/Holo.Light.ButtonBar"
	        android:layout_width="99dp"
	        android:layout_height="120dp"
	        android:layout_margin="2dp"
	        android:drawableTop="@drawable/new_route"
	        android:text="@string/addARouteLbl"
	        android:onClick="add" />
	
	    <Button
	        android:id="@+id/searchRoutesBtn"
	        style="@android:style/Holo.Light.ButtonBar"
	        android:layout_width="99dp"
	        android:layout_height="120dp"
	        android:layout_margin="2dp"
	        android:drawableTop="@drawable/new_route"
	        android:text="@string/searchRouteLbl" 
	        android:onClick="map"/>
	    
	    <Button
	        android:id="@+id/carbonCreditsBtn"
	        style="@android:style/Holo.Light.ButtonBar"
	        android:layout_width="99dp"
	        android:layout_height="120dp"
	        android:layout_margin="2dp"
	        android:drawableTop="@drawable/carbon_footprint"
	        android:text="@string/carbonCreditsLbl" 
	        android:onClick="totals"/>
	    
	</LinearLayout>

    <TextView
        android:id="@+id/textViewDivider"
        style="@style/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/homeDividerText" 
        android:textColor="@color/fontGrey"/>
    

    <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">


	     
	    <FrameLayout
	        android:id="@+id/fragment_layout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" > 
	        
	        <TextView 
	            android:id="@id/android:id/empty"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="@string/homeEmptyMessage"
	            android:textColor="@color/darkGreen1"
	            />
	    </FrameLayout>
	    
    </LinearLayout>

</LinearLayout>