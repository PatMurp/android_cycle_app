<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wit.cc.CarPicker" >

    <RadioGroup
        android:id="@+id/radioCo2BandGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pickerText"
        android:layout_alignStart="@+id/pickerText"
        android:layout_below="@+id/pickerText" >

        <RadioButton
            android:id="@+id/a1Band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a1Selected"  />

        <RadioButton
            android:id="@+id/a2Band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a2Selected" />

        <RadioButton
            android:id="@+id/a3Band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a3Selected"  />
        
        <RadioButton
            android:id="@+id/a4Band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a4Selected"  />
        
        <RadioButton
            android:id="@+id/b1Band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b1Selected"  />
        
        <RadioButton
            android:id="@+id/b2Band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b2Selected"  />
        
        <RadioButton
            android:id="@+id/cBand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cSelected"  />
        
         <RadioButton
            android:id="@+id/dBand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dSelected"  />
        
         <RadioButton
            android:id="@+id/eBand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eSelected"  />
         
         <RadioButton
            android:id="@+id/fBand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fSelected"  />
         
         <RadioButton
            android:id="@+id/gBand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gSelected"  />
    </RadioGroup>

    <TextView
        android:id="@+id/pickerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/spinnerMessage"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnChooseBand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioCo2BandGroup"
        android:layout_alignStart="@+id/radioCo2BandGroup"
        android:layout_below="@+id/radioCo2BandGroup"
        android:text="@string/radioGroupSelect" 
        android:background="@color/darkGreen1"/>

</RelativeLayout>